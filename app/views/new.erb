<div class="post-form">
  <h1>Create a New Post</h1>
  <form action="/posts" method="post">
    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="post[title]" id="title">
    </div>
    <div class="form-control">
      <label for="body">Body</label>
      <textarea name="post[body]" id="body">
      </textarea>
    </div>
    <div class="form-control">
      <input type="submit">
    </div>
  </form>
</div>